            dataType: "json",
            data: {},
            success: function(dataNode) {
               var storyDiv = $("#storyDiv"); 
             	 
               storyDiv.find("#storyTitle").html("Story "+story_id);
               var node= $("#nodeTemplate").clone();
               
               node.attr('id',"nodeTemplate_"+dataNode.id);
