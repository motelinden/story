<h1 class="pager">My Stories</h1>
<div class="container-fluid demo">
    <%= render "welcome/nav2" %>
    
    <% if @stories.nil? %>
        <!-- have no stories -->
    <% else %>
      <% @stories.each do |story| %>
        <h1 class="pager view-line"></h1>
        <h2 class="pagination">
            Story <%= story.id %>
        </h2>
          <div class="col-md-12 owl-content">
          <div id="owl-demo<%=story.id%>" class="owl-demo owl-carousel">
        <% story.nodes.each do |node| %>
	       	 <div id="nodeSubListItemTemplate<%=node.id%>">
	       	 		<div class="pager page">
					                			<h4 id="noedSubAuthor">第<%=node.level%>章 </h4>
					                			 
					     </div>
							<div   class="item" style="width:400px" >
							 					    	  <a href="#" id="noedSubShow">
												      		<p class="story-con-p" id='noedSubContent'>
																			<%= short_text(50,node.content) %>
												      		</p>
												        </a>
							</div>
							 <div class="pager page">
					                				<h4 id="noedSubAuthor">有<%=node_followers(node)%>个人接着写 </h4>
					                			<h4 id="noedSubAuthor">有N个评论<%=node_comments(node)%> </h4>
					     </div>
					</div>
				<% end %>
					</div>
					</div>
      <% end %>
    <% end %>
		

    <div class="view-line">
    </div>
</div>


<script>

   $(function() {
   <% if @stories.nil? %>
        <!-- have no stories -->
   <% else %>
      <% @stories.each do |story| %>
					var owl = $("#owl-demo<%=story.id%>");
		      initCarousel(owl, "", "");
		     	owl.trigger('owl.play',2000);
     	<% end %>
      
   <% end %>
     });
     
</script>