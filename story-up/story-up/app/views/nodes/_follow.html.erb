<%= form_for :node, url: url_for(controller: "nodes", action: "follow_up", id: @node), method: "post" do |f| %>

   <div class="form-group">
    <div class="input-group">
      <%= f.text_area :content, class: "form-control", rows: 10, cols: 100, id: "node-content", placeholder: @node.content %>
    </div>
  </div>
  <div class="form-group">
      <input type="reset"  value="Reset" class="btn btn-primary">
      <%= f.submit "Commit", class: "btn btn-primary", id: "btn-submit" %>
  </div>

<% end %>
