									  async: false,
									  method: "get",
            				dataType: "json"
									}).responseText;
							
							var userJson = JSON.parse(user); 		
              node.find("#chapter").html("Chapter "+dataNode.level+"<small>(Author: "+userJson.username+")</small>"); 
