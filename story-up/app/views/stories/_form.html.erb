
<%= form_for(@story) do |f| %>
  <div class="form-group">
    <div class="input-group">
      <%= f.text_area :story_content, class: "form-control", rows: 10, cols: 100 %>
    </div>
  </div>
  <div class="form-group">
      <input type="reset"  value="Reset" class="btn btn-primary">
      <%= f.submit "Commit", class: "btn btn-primary", id: "btn-submit" %>
  </div>
<% end %>
